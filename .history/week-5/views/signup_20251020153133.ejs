<% layout('layout') %>

<h3>Create account</h3>
<% if (error) { %>
  <div style="color:#b91c1c;"><%= error %></div>
<% } %>

<form method="post">
  <div class="form-row">
    <label>Name</label>
    <input type="text" name="name" />
  </div>
  <div class="form-row">
    <label>Email</label>
    <input type="email" name="email" />
  </div>
  <button class="btn" type="submit">Sign up</button>
</form>
