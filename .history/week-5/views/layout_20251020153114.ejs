<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>StudyHub</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <div class="header">
      <div>
        <h2>StudyHub</h2>
        <div class="small">AI English learning — demo</div>
      </div>
      <nav>
        <a href="/">Home</a>
        <a href="/materials">Materials</a>
        <a href="/ai/chat">AI Chat</a>
        <% if (!currentUser) { %>
          <a href="/signup">Sign Up</a>
          <a href="/login">Log In</a>
        <% } else { %>
          <span class="small">Hi, <%= currentUser.name %></span>
          <a href="/dashboard">Dashboard</a>
          <a href="/logout">Logout</a>
        <% } %>
      </nav>
    </div>

    <%- body %>

    <footer class="small" style="margin-top:24px; text-align:center; color:#999;">
      © StudyHub demo
    </footer>
  </div>
</body>
</html>
